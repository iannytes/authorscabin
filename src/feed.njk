---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title }}</title>
  <link href="{{ site.url }}/feed.xml" rel="self"/>
  <link href="{{ site.url }}"/>

  {# Safely compute the "updated" timestamp: latest post date or now #}
  {% set latest = (collections.post | reverse | first) %}
  <updated>{{ (latest and latest.date) | rssDate }}</updated>

  <id>{{ site.url }}/</id>

  {% for post in collections.post | reverse %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ site.url }}{{ post.url }}"/>
    <updated>{{ post.date | rssDate }}</updated>
    <id>{{ site.url }}{{ post.url }}</id>
    <content type="html"><![CDATA[{{ post.templateContent | safe }}]]></content>
  </entry>
  {% endfor %}
</feed>
